<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.web.*?>

<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
  <MenuBar VBox.vgrow="NEVER">
    <Menu mnemonicParsing="false" text="Фигуры">
      <MenuItem mnemonicParsing="false" onAction="#menuPoindClick" text="Точка, Прямая, Отрезок"/>
      <MenuItem mnemonicParsing="false" onAction="#menuRayClick" text="Луч и угол"/>
      <MenuItem mnemonicParsing="false" onAction="#menuAngleClick" text="Смежные и вертикальные углы"/>
      <SeparatorMenuItem mnemonicParsing="false"/>
      <MenuItem fx:id="menuTreangle" mnemonicParsing="false" text="Треугольник" onAction="#menuTriangle"/>
      <MenuItem mnemonicParsing="false" text="Окружность"/>
    </Menu>
    <Menu mnemonicParsing="false" text="Теоремы">
      <Menu mnemonicParsing="false" text="Признаки равенства">
        <MenuItem fx:id="menuEqualTr" mnemonicParsing="false" onAction="#onClickEquil"
                  text="Первый признак равенства треугольников"/>
        <MenuItem fx:id="menuSecondTr" mnemonicParsing="false" onAction="#onClickSecond"
                  text="Второй признак равенства треугольников "/>
        <MenuItem fx:id="menuTread" mnemonicParsing="false" onAction="#onClickTread"
                  text="Третий признак равенства треугольников"/>
      </Menu>

      <SeparatorMenuItem mnemonicParsing="false"/>
      <MenuItem mnemonicParsing="false" onAction="#menuIsosceles" text="Свойство равнобедренного треугольника"/>
      <MenuItem mnemonicParsing="false" text="Признак равнобедренного треугольника"/>
      <MenuItem mnemonicParsing="false" text="Paste"/>
      <MenuItem mnemonicParsing="false" text="Delete"/>
      <SeparatorMenuItem mnemonicParsing="false"/>
      <MenuItem mnemonicParsing="false" text="Select All"/>
      <MenuItem mnemonicParsing="false" text="Unselect All"/>
    </Menu>
    <Menu mnemonicParsing="false" text="Аксиомы и следствия">
      <MenuItem mnemonicParsing="false" onAction="#menuAcsiomy1Click"
                text="Аксиомы взаимного расположения точек, прямых и плоскостей"/>
      <MenuItem mnemonicParsing="false" onAction="#menuAcsiomy2Click" text="Аксиомы наложения и равенства"/>
      <MenuItem mnemonicParsing="false" onAction="#menuAcsiomy3Click" text="Аксиомы измерения отрезков"/>
      <MenuItem mnemonicParsing="false" onAction="#menuAcsiomy4Click" text="Аксиома параллельных"/>

    </Menu>
    <Menu mnemonicParsing="false" text="Настройки">
      <CheckMenuItem fx:id="menuShowPoindName" mnemonicParsing="false" text="Показывать большие буквы для имен"
                     selected="true" onAction="#menuShowPoindName"/>
      <CheckMenuItem fx:id="menuShowLineName" mnemonicParsing="false" text="Показывать маленькие буквы для имен"
                     selected="false" onAction="#menuShowLineName"/>
      <CheckMenuItem fx:id="menuGrid" mnemonicParsing="false" text="Показывать сетку" selected="true"
                     onAction="#menuGrid"/>
      <CheckMenuItem fx:id="menuCartesian" mnemonicParsing="false" text="Показывать координатную ось"
                     onAction="#menuCartesian"/>
      <CheckMenuItem fx:id="menuAngleName" mnemonicParsing="false" text="Показывать имена углов" onAction="#menuAngleName" />
    </Menu>
    <Menu mnemonicParsing="false" text="Помощь">
      <MenuItem fx:id="menuAbout" mnemonicParsing="false" onAction="#onAbout" text="О программе"/>
    </Menu>
  </MenuBar>
  <HBox prefHeight="25.0" prefWidth="900.0">
    <Button fx:id="btnPoind" mnemonicParsing="false" onAction="#btnPoindClick" onMouseEntered="#onMouseEnteredPoind" prefHeight="20.0" prefWidth="40.0" textAlignment="CENTER" />
    <Button fx:id="btnSegment" mnemonicParsing="false" onAction="#btnSegmentClick" onMouseEntered="#onMoseEnteredSegment" prefHeight="20.0" prefWidth="40.0" />
    <Button fx:id="btnRay" mnemonicParsing="false" onAction="#btnRay" onMouseEntered="#onMouseEnteredRay" prefHeight="20.0" prefWidth="40.0" />
    <Button fx:id="btnLine" mnemonicParsing="false" onAction="#btnLine" onMouseEntered="#onMouseEnteredLine" prefHeight="20.0" prefWidth="40.0" />
    <Button fx:id="btnAngle" mnemonicParsing="false" onAction="#btnAngle" prefHeight="20.0" prefWidth="40.0" />
    <Button fx:id="btnVertical" mnemonicParsing="false" prefHeight="20.0" prefWidth="40.0" />
    <Button fx:id="btnTreangle" mnemonicParsing="false" onAction="#btnTreangle" onMouseEntered="#onMouseEnteredTreangle" prefHeight="20.0" prefWidth="40.0" />
    <Button fx:id="btnMediana" mnemonicParsing="false" text="Медиана" onAction="#btnMedian" onMouseEntered="#onMouseEnteredMediana"/>
    <Button mnemonicParsing="false" text="Высота" />
    <Button fx:id="btnBisector" mnemonicParsing="false" text="Биссектриса" onAction="#btnBisector" onMouseEntered="#onMouseEnteredBisector"/>
    <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#btnDelete" onMouseEntered="#onMouseEnteredDelete" prefHeight="20.0" prefWidth="40.0" />
    <Button mnemonicParsing="false" onAction="#btnTest" text="Тест" />
  </HBox>
  <SplitPane dividerPositions="0.25, 0.85" focusTraversable="true" prefHeight="-1.0" prefWidth="-1.0"
             VBox.vgrow="ALWAYS">
    <AnchorPane>
      <WebView fx:id="webViewLeft" maxHeight="-1.0" maxWidth="-1.0" minHeight="-1.0" minWidth="-1.0" prefHeight="-1.0"
               prefWidth="-1.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="0.0"/>
      <opaqueInsets>
        <Insets/>
      </opaqueInsets>
    </AnchorPane>
    <StackPane fx:id="Cartesian">
      <Pane fx:id="paneGrid"/>
      <Pane fx:id="paneShape" accessibleRole="NODE" onMouseDragged="#onMouseDraggen" onMouseMoved="#onMouseMoved"
            onMousePressed="#onMousePressed" onScroll="#onScroll">

      </Pane>
    </StackPane>
    <AnchorPane>
      <TextArea fx:id="txtShape" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="0.0"/>
    </AnchorPane>
  </SplitPane>
  <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
    <padding>
      <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
    </padding>
    <Label fx:id="leftStatus" maxHeight="1.8" maxWidth="-1.0" textFill="blue" HBox.hgrow="ALWAYS">
      <font>
        <Font size="12.0" fx:id="x3" />
      </font>

    </Label>
    <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
    <Label fx:id="rightStatus" font="$x3" maxWidth="-1.0" textFill="blue" HBox.hgrow="NEVER" />
  </HBox>
</VBox>
